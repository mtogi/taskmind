# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/taskmind

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_make_it_long_and_random
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Client URL
CLIENT_URL=http://localhost:3000

# AI Features (Optional - can be disabled)
ENABLE_AI_FEATURES=false
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (Optional - for password reset and verification)
EMAIL_FROM=noreply@taskmind.space
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# File Upload (Optional)
MAX_FILE_SIZE=5000000
FILE_UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 